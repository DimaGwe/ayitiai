# AYITI AI - Production Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# CRITICAL: DeepSeek API Configuration
# ============================================================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# ============================================================================
# CRITICAL: Security Configuration
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Vector Database Configuration
# ============================================================================
VECTOR_DB_PATH=./data/vector_db
VECTOR_DB_TYPE=chromadb

# ============================================================================
# Knowledge Base Configuration
# ============================================================================
KNOWLEDGE_BASE_PATH=./knowledge_base

# ============================================================================
# LLM Configuration
# ============================================================================
MAX_TOKENS=4000
TEMPERATURE=0.7
MODEL_NAME=deepseek-chat

# ============================================================================
# Cost Management (PRODUCTION)
# ============================================================================
COST_LIMIT_DAILY=100.00
COST_ALERT_THRESHOLD=80.00

# ============================================================================
# Language Support
# ============================================================================
SUPPORTED_LANGUAGES=ht,fr,en,es
DEFAULT_LANGUAGE=ht

# ============================================================================
# API Configuration (PRODUCTION)
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
DEBUG_MODE=false

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_MAX_SIZE=2000
CACHE_DEFAULT_TTL=3600

# ============================================================================
# Conversation Memory
# ============================================================================
CONVERSATION_MAX_MESSAGES=10
CONVERSATION_TTL_HOURS=24

# ============================================================================
# Performance Monitoring
# ============================================================================
PERFORMANCE_WINDOW_SIZE=200

# ============================================================================
# Redis Cache (Optional - for distributed deployments)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password
# CACHE_BACKEND=redis

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/ayitiai.log

# ============================================================================
# Monitoring (Optional)
# ============================================================================
# PROMETHEUS_PORT=9090
# ENABLE_METRICS=true

# ============================================================================
# External Services (Optional)
# ============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key

# ============================================================================
# Rate Limiting (handled by Nginx, but can be app-level too)
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ============================================================================
# CORS Configuration (PRODUCTION)
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Database Backup (Optional)
# ============================================================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret

# ============================================================================
# Health Check Configuration
# ============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ============================================================================
# Worker Configuration (for production scaling)
# ============================================================================
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=60
KEEPALIVE=5

# ============================================================================
# Notes:
# ============================================================================
# 1. Never commit this file with real credentials to git
# 2. Use environment-specific files: .env.dev, .env.staging, .env.prod
# 3. Consider using a secrets manager (AWS Secrets Manager, HashiCorp Vault)
# 4. Rotate SECRET_KEY periodically
# 5. Monitor COST_LIMIT_DAILY and adjust based on usage
# 6. Review logs regularly for security issues
# 7. Keep DEEPSEEK_API_KEY secure and never expose it
